{
    "name":              "tasmaniski/zend-config-helper",
    "description":       "Provide Controller plugin and View helper for reading a config.",
    "type":              "library",
    "keywords":          ["zend framework", "config", "helper", "plugin"],
    "homepage":          "https://github.com/tasmaniski/zend-config-helper",
    "authors": [
        {
            "name":     "Aleksandar Varnicic",
            "email":    "tasmaniski@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.6",
        "zendframework/zend-mvc": "3.0.*",
        "zendframework/zend-config": "2.6.*"
    },
    "autoload": {
        "psr-0": {
            "ConfigHelper": "src/"
        },
        "classmap": [
            "src/"
        ]
    },
    "autoload-dev": {
        "psr-0": { "ConfigHelperTest": "test/" }
    }
}
